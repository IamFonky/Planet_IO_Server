// Accepts incoming connections and launches the sessions
class eventListener : public std::enable_shared_from_this<eventListener>
{
    net::io_context& ioc_;
    tcp::acceptor acceptor_;
    std::vector<Body>* blackholes_;

public:
    eventListener(
        net::io_context& ioc,
        tcp::endpoint endpoint,
        std::vector<Body>* blackholes)
        : ioc_(ioc)
        , acceptor_(ioc)
        , blackholes_(blackholes)
    {
        std::cout << "Listener started" << std::endl;
        beast::error_code ec;

        // Open the acceptor
        acceptor_.open(endpoint.protocol(), ec);
        if(ec)
        {
            socketError(ec, "open");
            return;
        }

        std::cout << "Listener opened" << std::endl;

        // Allow address reuse
        acceptor_.set_option(net::socket_base::reuse_address(true), ec);
        if(ec)
        {
            socketError(ec, "set_option");
            return;
        }

        std::cout << "Listener option sat" << std::endl;

        // Bind to the server address
        acceptor_.bind(endpoint, ec);
        if(ec)
        {
            socketError(ec, "bind");
            return;
        }

        std::cout << "Listener bound" << std::endl;

        // Start listening for connections
        acceptor_.listen(
            net::socket_base::max_listen_connections, ec);
        if(ec)
        {
            socketError(ec, "listen");
            return;
        }

        std::cout << "Listener listen" << std::endl;

    }

    // Start accepting incoming connections
    void
    run()
    {
        do_accept();
    }

private:
    void
    do_accept()
    {
        std::cout << "Listener accept" << std::endl;

        // The new connection gets its own strand
        acceptor_.async_accept(
            net::make_strand(ioc_),
            beast::bind_front_handler(
                &eventListener::on_accept,
                shared_from_this()));
    }

    void
    on_accept(beast::error_code ec, tcp::socket socket)
    {
        if(ec)
        {
            socketError(ec, "accept");
        }
        else
        {
            std::cout << "Listener accepted" << std::endl;
            // Create the eventSession and run it
            std::make_shared<eventSession>(std::move(socket),blackholes_)->run();
        }

        // Accept another connection
        do_accept();
    }
};

void eventServer(std::string strAddress, unsigned short port,unsigned short nbThreads, std::vector<Body>* blackholes){

    auto const address = net::ip::make_address(strAddress);
    auto const threads = std::max<int>(1, nbThreads);

    // The io_context is required for all I/O
    net::io_context ioc{threads};

    std::cout << "IOC CONTEXT SAT" << std::endl;
    // Create and launch a listening port
    std::make_shared<eventListener>(ioc, tcp::endpoint{address, port}, blackholes)->run();

    std::cout << "SESSION LAUNCHED" << std::endl;
    // Run the I/O service on the requested number of threads
    std::vector<std::thread> v;
    v.reserve(threads - 1);
    for(auto i = threads - 1; i > 0; --i)
        v.emplace_back(
                [&ioc]
                {
                    ioc.run();
                });
    ioc.run();
}